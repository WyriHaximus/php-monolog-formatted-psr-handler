{
  "name": "wyrihaximus/monolog-formatted-psr-handler",
  "description": "Passes `formatted` instead of `message` to the PSR-3 logger",
  "license": "MIT",
  "authors": [
    {
      "name": "Cees-Jan Kiewiet",
      "email": "ceesjank@gmail.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "monolog/monolog": "^3.4.0",
    "psr/log": "^3",
    "wyrihaximus/psr-3-utilities": "^2.2"
  },
  "require-dev": {
    "wyrihaximus/makefiles": "^0.7.12",
    "wyrihaximus/test-utilities": "^8.8.0"
  },
  "autoload": {
    "psr-4": {
      "WyriHaximus\\Monolog\\FormattedPsrHandler\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WyriHaximus\\Tests\\Monolog\\FormattedPsrHandler\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "icanhazstring/composer-unused": true,
      "infection/extension-installer": true,
      "localheinz/composer-normalize": true,
      "ocramius/package-versions": true,
      "phpstan/extension-installer": true,
      "wyrihaximus/makefiles": true,
      "wyrihaximus/test-utilities": true
    },
    "platform": {
      "php": "8.4.13"
    },
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "make on-install-or-update || true"
    ],
    "post-update-cmd": [
      "make on-install-or-update || true"
    ]
  }
}
